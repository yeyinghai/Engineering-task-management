# 环境配置文件示例
# 文件位置: .env (根目录)
# 说明: 将此文件复制为 .env.local 并填入实际的配置值

# ========== 应用环境 ==========
APP_ENV=development
APP_DEBUG=false
APP_URL=https://nas.yeyhome.com:319
APP_NAME=施工任务管理系统
APP_VERSION=1.0.0

# ========== 数据库配置 ==========
DB_HOST=127.0.0.1
DB_PORT=3307
DB_NAME=todolist
DB_USERNAME=root
DB_PASSWORD=zmddh45683968.
DB_CHARSET=utf8mb4

# 数据库连接池 (可选, 用于高并发)
DB_POOL_SIZE=10
DB_POOL_TIMEOUT=30

# ========== 安全配置 ==========
# JWT密钥 (用于未来的认证实现)
JWT_SECRET=your-super-secret-key-change-this
JWT_EXPIRATION=3600

# CSRF令牌密钥
CSRF_KEY=csrf-secret-key-change-this

# 会话配置
SESSION_TIMEOUT=1800
SESSION_SECURE=false

# ========== CORS配置 ==========
# 多个源用逗号分隔
CORS_ORIGINS=https://nas.yeyhome.com:319
CORS_CREDENTIALS=true

# ========== 缓存配置 ==========
CACHE_DRIVER=file
CACHE_TTL=3600
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# ========== 日志配置 ==========
LOG_LEVEL=debug
LOG_PATH=logs/
LOG_MAX_SIZE=10M
LOG_RETENTION_DAYS=30

# ========== 性能配置 ==========
# 分页
PAGINATION_LIMIT=20
PAGINATION_MAX_LIMIT=100

# 速率限制 (防暴力攻击)
RATE_LIMIT_ENABLED=true
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW=3600

# ========== 文件上传 ==========
UPLOAD_DIR=uploads/
MAX_UPLOAD_SIZE=52428800
ALLOWED_EXTENSIONS=jpg,jpeg,png,gif,pdf,doc,docx

# ========== 邮件配置 (用于未来实现) ==========
MAIL_DRIVER=smtp
MAIL_HOST=smtp.mailtrap.io
MAIL_PORT=587
MAIL_USERNAME=
MAIL_PASSWORD=
MAIL_FROM_ADDRESS=noreply@example.com
MAIL_FROM_NAME=施工任务管理系统

# ========== 第三方服务 ==========
# 文件存储 (可选)
STORAGE_DRIVER=local
AWS_BUCKET=
AWS_REGION=

# ========== 监控和分析 ==========
SENTRY_DSN=
ANALYTICS_ENABLED=false

# ========== 开发者配置 ==========
# 显示详细的错误堆栈
SHOW_STACK_TRACE=true
# API文档 (用于Swagger)
SWAGGER_ENABLED=true
# 模拟数据
ENABLE_SEED_DATA=false
